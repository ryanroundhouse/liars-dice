{
  "name": "liar-server",
  "version": "1.0.0",
  "description": "server for hosting liar's dice game",
  "main": "./dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanroundhouse/ts-socket.git"
  },
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "postbuild": "npm test",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "build": "rimraf ./dist/ && tsc && npm run copy-static-assets",
    "prestart": "npm run build",
    "start": "node ./dist/server.js",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "build-docker": "docker build -t ryanroundhouse/liar-server:1.0 .",
    "run-docker": "docker run --rm --name liar -p 3000:3000 ryanroundhouse/liar-server:main-086c1b3"
  },
  "author": "ryangraham",
  "license": "ISC",
  "dependencies": {
    "@ryanroundhouse/liars-dice-interface": "file:../liars-dice-interface",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "uuid": "^8.2.0",
    "winston": "^3.3.3",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/cookie": "^0.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/mocha": "^8.0.0",
    "@types/shelljs": "^0.8.8",
    "@types/sinon": "^9.0.4",
    "@types/uuid": "^8.0.0",
    "@types/winston": "^2.4.4",
    "@types/ws": "^7.2.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.1.1",
    "mock-session": "0.0.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.6"
  }
}
